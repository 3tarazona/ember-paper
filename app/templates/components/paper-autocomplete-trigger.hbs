{{#if extra.label}}
	{{paper-input label=extra.label flex=flex value=text onChange=(action 'handleInputLocal') onFocus=(action onFocus) onKeyDown=(action 'handleKeydown')}}
{{else}}
	<input type="search"
	  value={{text}}
	  class="ember-power-select-typeahead-input ember-power-select-search-input {{if flex "flex"}}"
	  placeholder={{placeholder}}
	  oninput={{action "handleInputLocal"}}
	  onfocus={{action onFocus}}
	  onkeydown={{action "handleKeydown"}}
	  disabled={{disabled}}
	  onmousedown={{action "stopPropagation"}}>
{{/if}}
{{#if select.loading}}
	{{paper-progress-linear}}
{{/if}}