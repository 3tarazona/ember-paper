{{#paper-button action="toggleMenu" raised=true}}
  {{#if selection}}
    {{selection}}
  {{else}}
    {{prompt}}
  {{/if}}
{{/paper-button}}
{{#if isOpen}}
  {{#paper-menu}}
    {{#each item in content}}
      {{#paper-menu-item action="select" param=item}}
        {{item}}
      {{/paper-menu-item}}
    {{/each}}
  {{/paper-menu}}
{{/if}}
