{{#if title}}
  <h3>{{title}}</h3>
{{/if}}

{{yield}}

<table class="paper-api">
  <thead>
    <tr>
      {{#each header as |heading|}}
        <th>{{heading}}</th>
      {{/each}}
    </tr>
  </thead>
  {{#each categories as |category|}}
    <tbody>
      {{#each category as |row|}}
        {{#if (is-subheading row)}}
          <tr class="subheading">
            <td colspan="3">{{row}}</td>
          </tr>
        {{else}}
          <tr>
            {{#each row as |cell index|}}
              {{#unless index}}
                <td><code>{{cell}}</code></td>
              {{else}}
                <td>{{cell}}</td>
              {{/unless}}
            {{/each}}
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  {{/each}}
</table>
